<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/slideImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seller"/>

    <TextView
        android:id="@+id/slideHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slideImage"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/quicksand"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@color/colorTransparentWhite"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="@string/sellerHeading"
        />

    <TextView
        android:id="@+id/slideDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_below="@id/slideHeading"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/quicksand"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="@string/sellerDescription"
        />

</RelativeLayout>